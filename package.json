{
  "name": "HubRise",
  "private": true,
  "description": "New incarnation of HubRise website",
  "version": "0.1.0",
  "author": "Pavel Ermolin <pavel.2@icloud.com>",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "start:dev": "gatsby develop",
    "start:prod": "gatsby build && gatsby serve --port 9009",
    "cy:open": "cypress open",
    "cy:run": "CYPRESS_BASE_URL=http://localhost:9009 cypress run",
    "test": "jest --config='./jest/config.js'",
    "test:e2e": "start-server-and-test start:dev http://localhost:8000 cy:open",
    "test:e2e:ci": "start-server-and-test start:prod http://localhost:9009 cy:run"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.6",
    "@mdx-js/mdx": "^1.1.4",
    "@mdx-js/react": "^1.1.4",
    "font-awesome": "^4.7.0",
    "formik": "^1.5.8",
    "foundation-sites": "^6.5.3",
    "gatsby": "^2.15.28",
    "gatsby-image": "^2.2.7",
    "gatsby-plugin-manifest": "^2.2.4",
    "gatsby-plugin-mdx": "^1.0.40",
    "gatsby-plugin-offline": "^2.2.4",
    "gatsby-plugin-react-helmet": "^3.1.2",
    "gatsby-plugin-sass": "^2.1.3",
    "gatsby-plugin-sharp": "^2.2.9",
    "gatsby-remark-images": "^3.1.28",
    "gatsby-source-filesystem": "^2.1.7",
    "gatsby-transformer-sharp": "^2.2.5",
    "i18next": "^17.0.13",
    "i18next-browser-languagedetector": "^4.0.0",
    "jquery": "^3.4.1",
    "motion-ui": "^1.2.3",
    "node-sass": "^4.12.0",
    "prism-react-renderer": "^0.1.7",
    "prismjs": "^1.17.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-i18next": "^10.12.2",
    "react-slick": "^0.25.2",
    "slick-carousel": "^1.8.1",
    "webpack": "^4.0.0",
    "what-input": "^5.2.6",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-prismjs": "^1.1.1",
    "babel-preset-gatsby": "^0.2.13",
    "cypress": "^3.4.1",
    "eslint": "^6.5.1",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^3.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^16.9.0",
    "standardx": "^3.0.1",
    "start-server-and-test": "^1.10.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,scss,md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx}": [
      "standardx --fix",
      "git add"
    ]
  },
  "standardx": {
    "parser": "babel-eslint",
    "plugins": [
      "react-hooks",
      "cypress"
    ],
    "globals": [
      "describe",
      "it",
      "expect",
      "cy",
      "jest",
      "fetch"
    ]
  },
  "eslintConfig": {
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "cypress/no-assigning-return-values": "error",
      "cypress/no-unnecessary-waiting": "error",
      "cypress/assertion-before-screenshot": "warn"
    }
  },
  "keywords": [
    "gatsby",
    "hubrise"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:HubRise/website.git"
  },
  "bugs": {
    "url": "https://github.com/HubRise/website/issues"
  }
}
